<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;500;700;900&display=swap"
    rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@200;300;400;600;700;900&display=swap"
    rel="stylesheet">
<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

<style>
    .digital3 {
        background-image: none;
        background-size: 100% auto;
        font-family: 'Titillium Web', sans-serif;
    }

    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        width: 20%;
        background-color: #f1f1f1;
        position: fixed;
        height: 100%;
        overflow: auto;
        text-align: center;
    }

    ul li {
        padding-top: 20px;
        padding-bottom: 20px;
    }

    ul a {
        font-weight: 500;
        font-size: 20px;
        color: black;
    }

    ul a:hover{
        color: fuchsia;
    }

    .phr {
        height: 5px;
        border-width: 0;
        color: white;
        background-color: white;
        margin: auto;
    }

    .active {
        text-decoration: underline;
        color:deepskyblue;
    }

    .title {
        font-weight: 900;
    }

    .content {
        font-weight: 400;
    }

    .contentbox {
        color: white;
    }
</style>

<body class="digital3">

    <ul style="padding-top: 50px;">
        <li><img src=<%=user.photo%> style="width:70%;height:auto"></li>
        <h2 style="font-weight: 700;">
            <%=user.name%>
        </h2>
        <br>
        <li><a href="/user/<%=user.id%>/digitalcv3/index">HOME</a></li>
        <li><a href="/user/<%=user.id%>/digitalcv3/edu">EDUCATION</a></li>

        <li><a href="/user/<%=user.id%>/digitalcv3/work">EXPERIENCE</a></li>

        <li><a href="/user/<%=user.id%>/digitalcv3/skill">SKILL</a></li>

        <li><a class="active" href="#" onclick="window.location.reload(true);">MULTIMEDIA</a></li>
    
            <% if (pdf.length>0){%>
            <li><a href="/user/<%=user.id%>/digitalcv3/cert">CERTIFICATE</a></li>
            <%};%>

        <li><a href="/user/<%=user.id%>/digitalcv3/contact">CONTACT</a></li>

    </ul>

    <%if(image.length>0){%>
    <div style="width:60%;margin:auto;padding-top: 150px;padding-left: 5%;" id="multi">
        <h2 style="text-align: left;font-size: 70px;font-weight: 700;">Image</h2>
        <br>
        <% var i=1%>
            <% image.forEach(function(model) { %>
                <% if (i%2==1){%>
                    <div class="row">
                        <div class="card col-xl-5" style="border: none;">
                            <img src="<%=model.file%>">
                        </div>
                        <div class="card col-xl-7" style="border: none;">
                            <h2 style="font-weight: 400;">
                                <%=model.description%>
                            </h2>
                        </div>
                    </div>
                    <br>
                    <% i++} else if (i%2==0){%>
                        <div class="row">
                            <div class="card col-xl-7" style="border: none;">
                                <h2 style="font-weight: 400;">
                                    <%=model.description%>
                                </h2>
                            </div>
                            <div class="card col-xl-5" style="border: none;">

                                <img src="<%=model.file%>">

                            </div>
                        </div>
                        <br>
                        <% i++} });%>

    </div>
    <%};%>

    <%if(video.length>0&&image.length>0){%>
    <div style="width:50%;margin:auto;padding-top: 100px;">
        <h2 style="text-align: left;font-size: 70px;font-weight: 700;">Video</h2>
        <br>
        <% video.forEach(function(model) { %>
            <video controls style="width:100%;margin:auto">
                <source src="<%=model.file%>">
            </video>
            <h2 style="text-align: center; font-weight: 400;">
                <%=model.description%>
            </h2>
            <br>
            <%});%>

    </div>
    <%};%>

    <%if(video.length>0&&image.length==0){%>
        <div style="width:50%;margin:auto;padding-top: 150px;">
            <h2 style="text-align: left;font-size: 70px;font-weight: 700;">Video</h2>
            <br>
            <% video.forEach(function(model) { %>
                <video controls style="width:100%;margin:auto">
                    <source src="<%=model.file%>">
                </video>
                <h2 style="text-align: center; font-weight: 400;">
                    <%=model.description%>
                </h2>
                <br>
                <%});%>
    
        </div>
        <%};%>

</body>