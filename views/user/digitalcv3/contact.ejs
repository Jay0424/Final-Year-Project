<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;500;700;900&display=swap"
    rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@200;300;400;600;700;900&display=swap"
    rel="stylesheet">
<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

<style>
    .digital3 {
        background-image: none;
        background-size: 100% auto;
        font-family: 'Titillium Web', sans-serif;
    }

    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        width: 20%;
        background-color: #f1f1f1;
        position: fixed;
        height: 100%;
        overflow: auto;
        text-align: center;
    }

    ul li {
        padding-top: 20px;
        padding-bottom: 20px;
    }

    ul a {
        font-weight: 500;
        font-size: 20px;
        color: black;
    }

    ul a:hover {
        color: fuchsia;
    }

    .phr {
        height: 5px;
        border-width: 0;
        color: white;
        background-color: white;
        margin: auto;
    }

    .active {
        text-decoration: underline;
        color: deepskyblue;
    }

    .title {
        font-weight: 900;
    }

    .content {
        font-weight: 400;
    }

    .contentbox {
        color: white;
    }

    .timeline {
        background-color: white;
    }

    .timeline {
        width: 40%;
        position: absolute;
        ;
    }

    .timeline li {
        box-sizing: border-box;
        padding: 20px 0px;
        padding-left: 10px;
        position: relative;
        text-align: left;
    }

    .line::before {
        content: '';
        position: absolute;
        width: 5px;
        height: 100%;
        background-color: black;
    }

    .line::before {
        content: '';
        position: absolute;
        width: 5px;
        top: 35px;
        height: 100%;
        background-color: black;
    }

    .timeline h2:before {
        content: "";
        position: absolute;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        top: 28px;
        left: 2.5px;
        border: solid 1px;
        background-color: white;
    }

    .timeline li {
        box-sizing: border-box;
        padding: 20px 0px;
        padding-left: 10px;
        position: relative;
    }
</style>

<body class="digital3">

    <ul style="padding-top: 50px;">
        <li><img src=<%=user.photo%> style="width:70%;height:auto"></li>
        <h2 style="font-weight: 700;">
            <%=user.name%>
        </h2>
        <br>
        <li><a href="/user/<%=user.id%>/digitalcv3/index">HOME</a></li>
        <li><a href="/user/<%=user.id%>/digitalcv3/edu">EDUCATION</a></li>

        <li><a href="/user/<%=user.id%>/digitalcv3/work">EXPERIENCE</a></li>

        <li><a href="/user/<%=user.id%>/digitalcv3/skill">SKILL</a></li>

        <% if (image.length>0||video.length>0) {%>
            <li><a href="/user/<%=user.id%>/digitalcv3/multi">MULTIMEDIA</a></li>
            <%};%>
    
            <% if (pdf.length>0){%>
            <li><a href="/user/<%=user.id%>/digitalcv3/cert">CERTIFICATE</a></li>
            <%};%>

        <li><a class="active" href="#" onclick="window.location.reload(true);">CONTACT</a></li>

    </ul>

    <div style="float: right;display:inline-flex;padding-top: 200px;padding-right: 200px;">
        <lottie-player src="https://assets6.lottiefiles.com/packages/lf20_3ktmthuy.json"  background="transparent"  speed="1"  style="width: 500px; height: 500px;"  loop  autoplay></lottie-player>
    </div>

    <div style="margin-left:10%;padding-top: 120px;width:70%">
            
        <div style="padding-top: 140px;">
            <h2 style="text-align: left;font-size: 70px;font-weight: 700;margin-left:25%;">Contact</h2>
            <br>
            <h2 style="text-align: left;margin-left:25%;font-size: 38px;">Name: <%=user.name%></h2>
            <br>
            <h2 style="text-align: left;margin-left:25%;font-size: 38px;">Phone: <%=user.phoneno%></h2>
            <br>
            <h2 style="text-align: left;margin-left:25%;font-size: 38px;display:inline-flex">Email: <%=user.email%></h2>
        </div>

    </div>


</body>