<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;500;700;900&display=swap"
    rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@200;300;400;600;700;900&display=swap"
    rel="stylesheet">
<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

<style>
    .digital3 {
        background-image: none;
        background-size: 100% auto;
        font-family: 'Titillium Web', sans-serif;
    }

    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        width: 20%;
        background-color: #f1f1f1;
        position: fixed;
        height: 100%;
        overflow: auto;
        text-align: center;
    }

    ul li {
        padding-top: 20px;
        padding-bottom: 20px;
    }

    ul a {
        font-weight: 500;
        font-size: 20px;
        color: black;
    }

    ul a:hover {
        color: fuchsia;
    }

    .phr {
        height: 5px;
        border-width: 0;
        color: white;
        background-color: white;
        margin: auto;
    }

    .active {
        text-decoration: underline;
        color: deepskyblue;
    }

    .title {
        font-weight: 900;
    }

    .content {
        font-weight: 400;
    }

    .contentbox {
        color: white;
    }

    .bar {
        background-color: white;
        display: block;
        height: 20px;
        border: 1px solid;
        border-radius: 5px;
        box-shadow: 2px 2px 4px;

    }

    .bar span {
        background:linear-gradient(90deg,#ffb88c, #de6262);
        display: block;
        height: 18px;
        border-radius: 3px;
        animation: level 3s;
    }

    .break{
        word-break: break-all;
    }

    @keyframes level {
        0% {
            width: 0%;
        }
    }
</style>

<body class="digital3">

    <ul style="padding-top: 50px;">
        <li><img src=<%=user.photo%> style="width:70%;height:auto"></li>
        <h2 style="font-weight: 700;">
            <%=user.name%>
        </h2>
        <br>
        <li><a href="/user/<%=user.id%>/digitalcv3/index">HOME</a></li>
        <li><a href="/user/<%=user.id%>/digitalcv3/edu">EDUCATION</a></li>

        <li><a href="/user/<%=user.id%>/digitalcv3/work">EXPERIENCE</a></li>

        <li><a class="active"  href="#" onclick="window.location.reload(true);">SKILL</a></li>

        <% if (image.length>0||video.length>0) {%>
            <li><a href="/user/<%=user.id%>/digitalcv3/multi">MULTIMEDIA</a></li>
            <%};%>
    
            <% if (pdf.length>0){%>
            <li><a href="/user/<%=user.id%>/digitalcv3/cert">CERTIFICATE</a></li>
            <%};%>

        <li><a href="/user/<%=user.id%>/digitalcv3/contact">CONTACT</a></li>

    </ul>

    <div style="float: right;padding-top: 200px;padding-right: 400px;width:45%">
        <h2 style="font-size: 70px;font-weight: 700;padding-left: 83px;">Language</h2>
        <br>
        <% language.forEach(function(model) { %>
            <div>
                <h2 style="font-weight: 600;">
                    <%=model.type%>
                </h2>
                <span class="bar">
                    <%if (model.degree==5){%>
                        <span style="width:100%"></span>
                        <%} else if (model.degree==4){%>
                            <span style="width:80%"></span>
                            <%} else if (model.degree==3){%>
                                <span style="width:60%"></span>
                                <% } else if (model.degree==2){%>
                                    <span style="width:40%"></span>
                                    <% } else{%>
                                        <span style="width:20%"></span>
                                        <%};%>
                </span>
                <br>
            </div>

            <% }); %>
    </div>



    </div>

    <div style="margin-left:15%;padding-top: 100px;width:70%;height: 100%;">

        <div style="padding-top: 100px;padding-bottom: 200px;">
            <h2 style="text-align: left;font-size: 70px;font-weight: 700;margin-left:28%;">Skill</h2>
            <br>
            <% skill.forEach(function(model) { %>
                <div style="margin-left:18%;width:80%;">
                    <br>
                    <h2  style="font-weight: 600;"><i class="fa fa-anchor" aria-hidden="true"
                            style="padding-right: 10px;"></i>
                            <%=model.type%>                                               
                    </h2>

                    <h2>
                        <%=model.content%>
                    </h2>
                    <br>
                </div>

                <% }); %>
        </div>
    </div>

    <div class="anibox">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
    </div>

</body>