<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
<style>
    .digtial1logo {
        color: white;
        font-size: 50px;
        line-height: 80px;
        padding: 0px 80px;
        font-weight: bold;
    }

    .contanctbox {
        width: 50%;
        margin: auto;
    }

    .contanctinfo {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }
</style>


<body class="cv1">

    <nav class="digital1">
        <a class="digtial1logo disable" href="/user/<%=user.id%>/digitalcv/index">My CV</a>
        <ul>
            <li><a href="/user/<%=user.id%>/digitalcv/index#edu">Education</a></li>
            <li><a href="/user/<%=user.id%>/digitalcv/work">Work</a></li>
            <li><a href="/user/<%=user.id%>/digitalcv/skill">Skill</a></li>
            <% if (image.length>0||video.length>0) {%>
                <li><a href="/user/<%=user.id%>/digitalcv/multi">Multimedia</a></li>
                <%}%>
                    <% if (pdf.length>0) {%>
                        <li><a href="/user/<%=user.id%>/digitalcv/cert">Certificate</a></li>
                        <%}%>
                            <li><a href="#" onclick="window.location.reload(true);">Contact</a></li>
        </ul>
    </nav>
    <div class="contanctbox">
        <h1 class="intro" style="padding-bottom: 10px;">Contact Me</h1>
        <br>
        <div class="row" style="border: 10px solid brown;">
            <div class="card col-xl-6" style="border: none;">
                <lottie-player src="https://assets1.lottiefiles.com/packages/lf20_ixtchlvx.json"
                    background="transparent" speed="1" style="width: 400px; height: 400px;" loop autoplay>
                </lottie-player>
            </div>

            <div class="card col-xl-6" style="border: none;">
                <br>
                <br>
                <br>
                <br>
                <h2 class="contanctinfo"><i class="fa fa-user" aria-hidden="true" style="padding-right: 5px;"></i>
                    <%=user.name%>
                </h2>
                <br>
                <h2  class="contanctinfo"><i class="fa fa-envelope" aria-hidden="true"  style="padding-right: 5px;"></i>
                    <%=user.email%>
                </h2>
                <br>
                <h2 class="contanctinfo"><i class="fa fa-phone-square" aria-hidden="true"  style="padding-right: 5px;"></i>
                    <%=user.phoneno%><h2>
            </div>
        </div>




</body>