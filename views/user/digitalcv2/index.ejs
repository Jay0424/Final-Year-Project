<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap" rel="stylesheet">
<style>
    .digital2 {
        background-image: none;
        font-family: 'Lato', sans-serif;
        font-weight: 900;
    }

    .digital2logo {
        color: black;
        font-size: 40px;
        line-height: 80px;
        padding: 0px 80px;
        font-weight: 900;
    }

    .digital2logo:hover {
        color: black;
    }

    nav {
        background: white;
        height: 80px;
        width: 100%;
    }

    nav ul li a {
        color: black;
        font-size: 25px;
        padding: 7px 10px;
        border-radius: 3px;
    }

    .box {
        width: 70%;
        margin: auto;
    }

    .firstbox {
        height: 450px;
        background: linear-gradient(90deg, #000428, #004e92);
        background-repeat: no-repeat;
        background-size: 100% auto;
        animation: animate 10s linear infinite;
    }

    .iam {
        font-size: 60px;
        font-weight: 900;
        color: white;
        text-align: center;
    }

    .name {
        font-size: 60px;
        font-weight: 900;
        background: linear-gradient(90deg, rgb(187, 247, 92), white);
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        text-align: center;
    }

    .title {
        font-size: 50px;
        font-weight: 900;
    }

    .left {
        float: left;
        width: 50%;
        background: linear-gradient(90deg, #2193b0, #6dd5ed);
        padding-left: 50px;
    }

    .left2 {
        float: left;
        width: 50%;
        background: black;
        padding-left: 50px;
    }

    .left :is(h2, h3) {
        color: white;
        font-weight: 900;
    }

    .right :is(h2, h3) {
        color: black;
        font-weight: 900;
    }

    .right {
        float: left;
        width: 50%;
        background: linear-gradient(90deg, #ee9ca7, #ffdde1);
        padding-left: 50px;
    }

    .right2 {
        float: left;
        width: 50%;
        background: whitesmoke;
        padding-left: 50px;
    }

    .timeline li {
        box-sizing: border-box;
        padding: 20px 0px;
        padding-left: 10px;
        position: relative;
    }

    .line::before {
        content: '';
        position: absolute;
        width: 5px;
        height: 100%;
        background-color: black;
    }

    .line::before {
        content: '';
        position: absolute;
        width: 5px;
        top: 35px;
        height: 100%;
        background-color: black;
    }

    .timeline h2:before {
        content: "";
        position: absolute;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        top: 28px;
        left: 2.5px;
        border: solid 1px;
        background-color: white;
    }

    .timeline li {
        box-sizing: border-box;
        padding: 20px 0px;
        padding-left: 10px;
        position: relative;
    }

    .anibox div {
        -webkit-border-radius: 50%;
        -moz-border-radius: 50%;
        border-radius: 50%;
        -webkit-box-shadow: 0px 0px 20px 15px rgba(211, 216, 222, 1);
        -moz-box-shadow: 0px 0px 20px 15px rgba(211, 216, 222, 1);
        box-shadow: 0px 0px 20px 15px rgba(211, 216, 222, 1);
        background-color: rgb(11, 252, 252);
        width: 60px;
        height: 60px;
        position: absolute;
    }

    .anibox div:nth-child(1) {
        top: 20%;
        left: 30%;
        animation: move 5s linear infinite;
    }

    .anibox div:nth-child(2) {
        top: 30%;
        left: 10%;
        animation: move 8s linear infinite;
    }

    .anibox div:nth-child(3) {
        top: 15%;
        left: 12%;
        animation: move 6s linear infinite;
    }

    .anibox div:nth-child(4) {
        top: 40%;
        left: 25%;
        animation: move 9s linear infinite;
    }

    .anibox div:nth-child(5) {
        top: 30%;
        left: 70%;
        animation: move 7s linear infinite;
    }

    .anibox div:nth-child(6) {
        top: 40%;
        left: 80%;
        animation: move 6s linear infinite;
    }

    .anibox div:nth-child(7) {
        top: 35%;
        left: 90%;
        animation: move 9s linear infinite;
    }

    .anibox div:nth-child(8) {
        top: 40%;
        left: 65%;
        animation: move 6s linear infinite;
    }

    .anibox div:nth-child(9) {
        top: 30%;
        left: 20%;
        animation: move 8s linear infinite;
    }

    .anibox div:nth-child(10) {
        top: 20%;
        left: 80%;
        animation: move 5s linear infinite;
    }

    .anibox div:nth-child(11) {
        top: 45%;
        left: 15%;
        animation: move 8s linear infinite;
    }

    .anibox div:nth-child(12) {
        top: 40%;
        left: 85%;
        animation: move 7s linear infinite;
    }

    .circle {
        width: 250px;
        height: 250px;
        line-height: 250px;
        font-size: 25px;
        color: #fff;
        text-align: center;
        background: cornflowerblue;
    }

    @keyframes move {
        0% {
            transform: scale(0) translateY(0) rotate(70deg);
        }

        100% {
            transform: scale(1.3) translateY(-50px) rotate(70deg);
        }
    }
</style>

<body class="digital2">

    <nav>
        <a class="digital2logo" href="#" onclick="window.location.reload(true);">Home</a>
        <ul>
            <li><a href="#edu">Education</a></li>
            <li><a href="#exp">Experience</a></li>
            <li><a href="/user/<%=user.id%>/digitalcv2/skill">Skill</a></li>
            <% if (image.length>0||video.length>0) {%>
                <li><a href="/user/<%=user.id%>/digitalcv2/skill#multi">Multimedia</a></li>
                <%}%>
                    <% if (pdf.length>0) {%>
                        <li><a href="/user/<%=user.id%>/digitalcv2/cert">Certificate</a></li>
                        <%}%>
                            <li><a href="/user/<%=user.id%>/digitalcv2/cert#contact">Contact</a></li>
        </ul>
    </nav>

    <div class="firstbox">
        <div class="box">
            <br>
            <br>
            <br>
            <br>
            <br>
            <h2 class="iam">Hello I am</h2>
            <br>
            <div>
                <h2 class="name">
                    <%=user.name%>
                </h2>
            </div>
            <div class="anibox">
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>
    </div>

    <br>
    <br>
    <br>

    <div style="width:65%;margin: auto;padding-bottom: 50px;">
        <img src=<%=user.photo%> align="left" style="width:50%; height:100%;padding-right:50px">
        <div style="padding-left: 100px;">
            <br>
            <h2 class="title">
                About Me
            </h2>
            <h3>
                <%=user.summary%>
            </h3>
            <br>
            <iframe src="/user/papercv/<%=user.id%>" style="display:none;" name="frame"></iframe>
            <button style="width:50%" type="submit" class="btn btn-dark" onclick="frames['frame'].print()"
                target="_blank">Download CV</button>
            <br>
            <br>

        </div>
    </div>

    <br>
    <br>
    <br>
    <div style="width:100%;margin: auto;overflow: hidden;display: flex;">
        <div class="left" id="edu">
            <h2 class="intro"> <i class="fa fa-graduation-cap" aria-hidden="true"
                    style="padding-right: 20px;"></i>Education
            </h2>
            <ul class="timeline">
                <% var i=1%>
                    <% education.forEach(function(model) { %>
                        <%if(i!=education.length){%>
                            <li class="line">
                                <div style="padding-left: 30px;">
                                    <h2>
                                        <%=model.syear%>-<%=model.eyear%>
                                    </h2>
                                    <h3>
                                        <%=model.certification%>
                                    </h3>
                                    <h3>
                                        <%=model.school%>
                                    </h3>
                                </div>
                            </li>
                            <% i++ %>
                                <%} else {%>
                                    <li>
                                        <div style="padding-left: 30px;">
                                            <h2>
                                                <%=model.syear%>-<%=model.eyear%>
                                            </h2>
                                            <h3>
                                                <%=model.certification%>
                                            </h3>
                                            <h3>
                                                <%=model.school%>
                                            </h3>
                                        </div>
                                    </li>
                                    <% i++ %>
                                        <% }}); %>
            </ul>

        </div>

        <div class="right" id="exp">
            <h2 class="intro"> <i class="fa fa-briefcase" aria-hidden="true" style="padding-right: 20px;"></i>Experience
            </h2>
            <ul class="timeline">
                <% var j=1%>
                    <% work.forEach(function(model) { %>
                        <%if(j!=work.length){%>
                            <li class="line">
                                <div style="padding-left: 30px;">
                                    <h2>
                                        <%=model.start%> - <%=model.end%>
                                    </h2>
                                    <h3 class="wcontent">
                                        <%=model.job%> | <%=model.company%>
                                    </h3>
                                    <h3 class="wdescript">
                                        <%=model.description%>
                                    </h3>
                                </div>
                            </li>
                            <% j++ %>
                                <%} else {%>
                                    <li>
                                        <div style="padding-left: 30px;">
                                            <h2>
                                                <%=model.start%> - <%=model.end%>
                                            </h2>
                                            <h3 class="wcontent">
                                                <%=model.job%> | <%=model.company%>
                                            </h3>
                                            <h3 class="wdescript">
                                                <%=model.description%>
                                            </h3>
                                        </div>
                                    </li>
                                    <% j++ %>
                                        <% }}); %>
            </ul>
        </div>
    </div>

    
</body>