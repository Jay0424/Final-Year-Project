            <li><a class="nav-button" href="/visitor/register">Register</a></li>
            <li><a class="nav-button" href="/visitor/login">Login</a></li>
        </ul>
    </nav>

    <div class="container">
        <h2 class="intro">Register</h2>
        <form action="/visitor/register" method="POST" onsubmit="return validateForm()">
            <div class="form-group row">
                <div class="col-xl-12 col-form-label center">
                    <label >Username:</label>
                    <input type="text" class="form-control" name="username" id="username"
                        placeholder="Enter your username" required>

                </div>

                <div class="col-xl-12 col-form-label">
                    <label>Password:</label>
                    <input type="password" class="form-control" name="password" placeholder="Enter your password"
                        required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary center">Submit</button>
        </form>
    </div>

</body>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script src="sweetalert2.all.min.js"></script>
<script>

    function validateForm() {
        alert("User Registered Successfully");
        return true;
    }

    function validateForm() {
        var register = document.getElementById("username").value;

        var thatAccount = await User.findOne({ username: register });

        if (thatAccount) {
            alert("The username is already used");
            return false;
        }


    }





</script>